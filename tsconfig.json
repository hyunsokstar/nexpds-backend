{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2021",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": false,
    "strictBindCallApply": false,
    "noFallthroughCasesInSwitch": false,

    // ✅ 추가할 부분
    "paths": {
      "@prisma/*": ["prisma/*"],      // ✅ Prisma 관련 경로 설정
      "@modules/*": ["src/modules/*"], // ✅ 모듈 import 간편화
      "@services/*": ["src/services/*"] // ✅ 서비스 import 간편화
    }
  }
}
