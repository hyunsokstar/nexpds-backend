generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Tenant {
  id          String     @id @default(uuid()) // 테넌트 ID (UUID)
  name        String     @unique              // 테넌트 이름
  createdAt   DateTime   @default(now())      // 생성 일자
  campaigns   Campaign[] // 1:N 관계 (Tenant → Campaign)
}

model Campaign {
  id        String   @id @default(uuid()) // 캠페인 ID (UUID)
  name      String   // 캠페인 이름
  tenantId  String   // FK (Tenant ID)
  tenant    Tenant   @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now()) // 생성 일자
}
